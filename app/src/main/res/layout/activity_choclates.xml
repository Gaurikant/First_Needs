<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choclates"
    android:background="@drawable/pic3"
    >

    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="68dp"
        android:text="Chocolates:-"
        android:textColor="@android:color/background_dark"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/c"
        android:layout_marginTop="174dp"
        android:text="Dairy Milk:-"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/qty5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView20"
        android:layout_marginEnd="67dp"
        android:text="AVL QTY:-"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/qty5"
        android:layout_alignTop="@+id/sub5"
        android:text="+"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sub5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="219dp"
        android:layout_toEndOf="@+id/c"
        android:text="-"
        android:textSize="25dp"
        android:textStyle="bold" />
</RelativeLayout>